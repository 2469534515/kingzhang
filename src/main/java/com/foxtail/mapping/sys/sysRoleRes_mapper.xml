<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.foxtail.dao.mybatis.sys.SysRoleResDao">
	
	
	<!-- 根据对象字段保存 -->
	<insert id="save"  >
	   insert into t_sys_role_resource(role_id,resource_id)
	   values (#{roleid},#{resid})
	</insert>

	
	<!-- 根据角色id删除关系 -->
	<delete id="delete" >
		delete from t_sys_role_resource where role_id in
	  <foreach collection="roleids" item="id" index="index" open="(" close=")" separator=",">
              #{id}
          </foreach>
	</delete>
	
	<delete id="deleteByResid" >
		delete from t_sys_role_resource where resource_id in
	  <foreach collection="resids" item="id" index="index" open="(" close=")" separator=",">
              #{id}
              
          </foreach>
	</delete>
	
	
</mapper>   
